
@model IEnumerable<CompraDto>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<div class="card shadow border-0 mt-4">
	<div class="card-header  bg-info bg-gradient text-white  ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-black">Listado de Compras</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="CrearCompra" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Crear Compra</a>

			</div>
		</div>
		<table class="table table-bordered">
			<thead class="thead-dark">
				<tr>
					<th>
						Id
					</th>
					<th>
						Fecha de Registro
					</th>
					<th>
						Sub Total(S/)
					</th>
					<th>
						Igv(S/)
					</th>
					<th>
						Total(S/)
					</th>
				
					
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{
				<tr>
					<td> @item.Id_CompraCab
					</td>
						<td>
							@item.FecRegistro
					</td>
						<td>
							@item.SubTotal.ToString("F2")
					</td>
						<td>
							@item.Igv.ToString("F2")
						</td>
						<td>
							@item.Total.ToString("F2")
						</td>
					
				</tr>
				}
			</tbody>
		</table>

	</div>

</div>