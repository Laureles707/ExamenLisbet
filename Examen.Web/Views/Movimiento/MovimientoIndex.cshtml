
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<div id="appMovimiento" class="container mt-4">


	<div class="card shadow border-0 mt-4">
		<div class="card-header  bg-info bg-gradient text-white  ml-0 py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h1 class="text-black">Listado de Kardex</h1>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<div class="row pb-3">
				<div class="col-6">
				</div>

			</div>
			<table class="table table-bordered">
				<thead class="thead-dark">
					<tr>
						<th>
							Id
						</th>
						<th>
							Producto
						</th>
						<th>
							Stock actual
						</th>
						<th>
							Costo
						</th>

						<th>
							Precio de Venta
						</th>
						
						<th>
							Opciones
						</th>

					</tr>
				</thead>
				<tbody>
						
					<tr v-for="item in productos" :key="item.id_Producto">
						<td>{{ item.id_Producto }}</td>
						<td>{{ item.nombre_producto }}</td>
						<td>{{ item.stock }}</td>
						<td>{{ item.costo }}</td>
						<td>{{ item.precioVenta }}</td>
						<td>
							<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalDetalles" 
									v-on:click="listarMovProducto(item.id_Producto)">
								<i class="bi bi-eye"></i> Ver detalles
							</button>
						</td>
						
					</tr>

			
				</tbody>
			</table>

		</div>

	</div>
	<div class="modal fade" id="modalDetalles" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="modalLabel">Movimientos del Producto</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<table class="table table-bordered">
						<thead class="thead-dark">
							<tr>
								<th>
									Fecha de Registro
								</th>
								<th>
									Tipo de Movimiento
								</th>
								<th>
									Cantidad
								</th>
								

							</tr>
						</thead>
						<tbody>
							<tr v-for="item in listaMovProductos" :key="item.id">
								<td>{{ item.fecha_registro }}</td>
								<td>{{ item.tipo_movimiento }}</td>
								<td>{{ item.cantidad }}</td>
							</tr>
						
						</tbody>
					</table>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
				</div>
			</div>
		</div>


	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.js"></script>
<script src="~/js/movimiento.js"></script>
